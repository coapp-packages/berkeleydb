@import "version.inc";
@import "outercurve.inc";

#define { 
    flavor: "${flav??vc10}"; 
    arch : "${arc??x86}";
}

package {
    name: "berkeleydb-dev[${flavor}]";
    version: "${package-version}";
    arch : "${arch}";
    
    display-name: "Berkeley Database developer library";
}

metadata {
    summary: "Berkeley Database developer library";
    description: @"The Berkeley DB library provides key-value storage in a specific file format.
This package contains the developer libraries for the ${arch} archetecture, as built by the ${flavor} compiler.";
    
    author-version : "5.3.21";
    bug-tracker: "https://github.com/coapp-packages/berkeleydb/issues";
    stability : "0";
    licenses : {
        sleepycat
    };
}

compatability-policy {
    minimum: "5.3.0.0";
    maximum: "${OneLessThanCurrent}"; // this is the default
}

license[sleepycat] {
    license: "..\LICENSE";
    license-url: "http://www.opensource.org/licenses/Sleepycat";
    license-type: "sleepycat";
}

requires {
    package: "berkeleydb-dev-common-${package-version}-any-${Package.PublicKeyToken}";
    package: "berkeleydb[${flavor}]-${package-version}-${Package.Architecture}-${Package.PublicKeyToken}";
}

files[libs] {
    root: @"..\output\${flavor}\${arch}\Release";
  
    include: {
        "*.lib"
    };
    
    trim-path:minimal;
};

developer-library[berkeleydb[${flavor}]] {
    libraries : {
        libs
    };
}
