@import "version.inc" ;
@import "outercurve.inc" ;

package {
    name: "berkeleydb-dev-common";
    version: "${package-version}";
    arch: any;
    
    display-name: "Berkeley Database developer library - common files";
}

metadata {
    summary: "Berkeley Database developer library - common files";
    description: @"The Berkeley DB library provides key-value storage in a specific file format.
This package contains the common header files and documentation for the developer libraries.";

    bug-tracker: "https://github.com/coapp-packages/berkeley/issues";
    stability : "0";
    licenses : {
        sleepycat
    };
}

license[sleepycat] {
    license: "..\\LICENSE";
    license-url: "http://www.opensource.org/licenses/Sleepycat";
    license-type: "sleepycat";
}

files[headers] {
    root: "..\\build_windows\\";
    include: {
        "*.h"
    };
    
    trim-path:minimal;
    
    // ensures that all the header files end up in a subfolder called 'include'
    destination-path:"include";
}

files[docs] {
    root: "..\\docs\\";
    include: {
        "**"
    };
    
    trim-path:minimal;
    
    // ensures that all the documentation files end up in a subfolder called 'docs'
    destination-path:"docs";

}

// the 'name' of the developer library isn't terribly important...
developer-library[berkeley] {
    headers: { 
        headers
    };
    
    docs: {
        docs
    };
}